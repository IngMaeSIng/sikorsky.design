---
import "../styles/global.css";
import Nav from "./Nav.astro";
import LikeButton from "./LikeButton.astro";
import config from "virtual:theme-config";

interface Props {
  title: string;
  description?: string;
  pageId?: string;
}

const { title, description, pageId } = Astro.props;
const currentPath = Astro.url.pathname;
const { footer, site } = config;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="32x32">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" /><!-- 180×180 -->
    <link rel="manifest" href="/manifest.webmanifest" />
    <link
      rel="preload"
      href="/fonts/Inter/InterVariable.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/fonts/Inter/inter.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Nav title={title} />
    <main>
      <div class="content">
        <slot />
        {
          pageId && (
            <div class="social">
              <LikeButton pageId={pageId} />
              <strong class="dot-separator">·</strong>
              <div>
                <strong class="share">
                  { /* prettier-ignore */}
                  <a class="link" id="copy-link">Copy&nbsp;&&nbsp;Share:</a>
                </strong>
              </div>
              <div>
                <strong class="share">
                  <span class="link-address">{` ${site.domain}${currentPath.replace(/\/$/, "")}`}</span>
                </strong>
              </div>
            </div>
          )
        }
      </div>
    </main>
    <footer>
      <p class="secondary">
        <span>{footer.copyright}</span>
        {footer.decoration && <span style="margin-left: 6px; letter-spacing: 5px" set:html={footer.decoration} />}
        <span>
          <a href={`mailto:${footer.email}`} class="link">{footer.email}</a>
          {footer.socials.map((social) => (
            <>
              {" · "}
              <a
                href={social.url}
                class="link"
                target={social.sameTab ? undefined : "_blank"}
              >
                {social.label}
              </a>
            </>
          ))}
        </span>
      </p>
    </footer>
  </body>
</html>

<style>
  footer .link {
    color: var(--caption_dark);
    text-underline-offset: 0.12em;
    text-decoration-skip-ink: none;
  }

  footer .link:hover {
    color: var(--base);
  }

  @media (max-width: 600px) {
    footer p > span:last-of-type {
      display: block;
    }
  }
</style>

<script define:vars={{ domain: site.domain }}>
  document.getElementById("copy-link")?.addEventListener("click", (e) => {
    if (e.target.closest(".link")) {
      e.preventDefault();
      navigator.clipboard.writeText(
        `${domain}${window.location.pathname}`
      );
    }
  });
</script>
