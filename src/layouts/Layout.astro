---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import LikeButton from "../components/LikeButton.astro";

interface Props {
  title: string;
  description?: string;
  pageId?: string;
}

const { title, description, pageId } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="32x32">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" /><!-- 180×180 -->
    <link rel="manifest" href="/manifest.webmanifest" />
    <link
      rel="preload"
      href="/fonts/Inter/InterVariable.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/fonts/Inter/inter.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Nav title={title} />
    <main>
      <div class="content">
        <slot />
        {
          pageId && (
            <div class="social">
              <LikeButton pageId={pageId} />
              <strong class="dot-separator">·</strong>
              <div>
                <strong class="share">
                  { /* prettier-ignore */}
                  <a class="link" id="copy-link">Copy&nbsp;&&nbsp;Share:</a>
                </strong>
              </div>
              <div>
                <strong class="share">
                  <span class="link-address">{` sikorsky.design${currentPath.replace(/\/$/, "")}`}</span>
                </strong>
              </div>
            </div>
          )
        }
      </div>
    </main>
    <footer>
      <p class="secondary">
        <span>© Paul Sikorsky, b. 1988</span>
        <span style="margin-left: 6px; letter-spacing: 5px">·㉨·</span>
        <span>
          <a href="mailto:p@sikorsky.design" class="link">p@sikorsky.design</a>
          · <a href="https://t.me/initsrightplace" class="link" target="_blank">@initsrightplace</a>
          · <a
              href="https://www.linkedin.com/in/paulsikorsky/"
              class="link"
              target="_blank">LinkedIn</a>
          · <a href="https://www.instagram.com/ingmaesing/" class="link" target="_blank">Instagram</a>
        </span>
      </p>
    </footer>
  </body>
</html>

<style>
  .social {
    display: flex;
    align-items: center;
    flex-wrap: wrap;

    margin-top: 56px;

    gap: 8px;

    position: relative;
    left: -8px;

    font-size: 20px;
  }

  @media (max-width: 600px) {
    .social {
      display: block;
      left: -12px;

      margin-top: 34px;
    }
  }

  .dot-separator {
    display: inline;
    visibility: visible;
  }

  @media (max-width: 600px) {
    .dot-separator {
      display: none;
      visibility: hidden;
    }
  }

  @media (max-width: 600px) {
    .like-container {
      margin-bottom: 34px;
    }
    .share {
      padding-left: 12px;
    }
  }

  #copy-link {
    cursor: pointer;
  }

  footer .link {
    color: var(--caption_dark);
    text-underline-offset: 0.12em;
    text-decoration-skip-ink: none;
  }

  footer .link:hover {
    color: var(--base);
  }

  @media (max-width: 600px) {
    footer p > span:last-of-type {
      display: block
    }
  }
</style>

<script is:inline>
  document.getElementById("copy-link").addEventListener("click", (e) => {
    if (e.target.closest(".link")) {
      e.preventDefault();
      navigator.clipboard.writeText(
        `sikorsky.design${window.location.pathname}`
      );
    }
  });
</script>
