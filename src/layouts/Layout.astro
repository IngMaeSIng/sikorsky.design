---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import LikeButton from "../components/LikeButton.astro";

interface Props {
  title: string;
  pageId?: string;
}

const { title, pageId } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Experienced product designer and design manager with a passion for structured æsthetics and holistic approach. On a mission to build a universal self-design system." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <!--<link rel="icon" href="/icon.svg" type="image/svg+xml">-->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" /><!-- 180×180 -->
    <link rel="manifest" href="/manifest.webmanifest" />
    <link
      rel="preload"
      href="/fonts/Inter/InterVariable.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/fonts/Inter/inter.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Nav title={title} />
    <main>
      <div class="content">
        <slot />
        {
          pageId && (
            <div class="social">
              <LikeButton pageId={pageId} />
              <strong class="separator">·</strong>
              <strong class="share">
                <a href={Astro.url} class="link" id="copy-link">
                  Copy&nbsp;&&nbsp;Share:</a>
                {` sikorsky.design${currentPath.replace(/\/$/, '')}`}
              </strong>
            </div>
          )
        }
      </div>
    </main>
    <footer>
      <p class="secondary">© 2012&thinsp;–&thinsp;2024&nbsp;Paul Sikorsky</p>
    </footer>
  </body>
</html>

<style>
  .social {
    display: flex;
    align-items: center;
    flex-wrap: wrap;

    margin-top: 56px;

    gap: 8px;

    position: relative;
    left: -8px;

    font-size: 20px;
  }

  .separator {
    display: inline;
    visibility: visible;

  }

  @media (max-width: 600px) {
    .separator {
      display: none;
      visibility: hidden;
    }
  }

  @media (max-width: 600px) {
    .share {
      padding-left: 8px;
      margin-top: 40px;
    }
  }
</style>

<script is:inline>
  document.getElementById('copy-link').addEventListener("click", (e) => {
    if (e.target.closest(".link")) {
      e.preventDefault();
      navigator.clipboard.writeText(
        `sikorsky.design${window.location.pathname}`
      );
    }
  });
</script>
